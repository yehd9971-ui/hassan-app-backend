# MongoDB Connection (استخدم هذه الطريقة الآمنة)
DB_USER=your_mongodb_username
DB_PASS=your_mongodb_password
DB_HOST=cluster0.aspanut.mongodb.net
DB_NAME=hassan-app

# أو استخدم MONGODB_URI (أقل أماناً)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# JWT Secret Key (تغيير هذا في الإنتاج)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server Port
PORT=3000

# Redis URL (اختياري - للـ rate limiting)
REDIS_URL=redis://localhost:6379

# Frontend URL (اختياري)
FRONTEND_URL=http://localhost:3000