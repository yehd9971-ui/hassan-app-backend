    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.environment.set('JWT_TOKEN', response.data.token);",
                  "        console.log('JWT Token saved successfully');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin@example.com\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/hassan-app/login",
              "host": ["{{BASE_URL}}"],
              "path": ["hassan-app", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/hassan-app/logout",
              "host": ["{{BASE_URL}}"],
              "path": ["hassan-app", "logout"]
            }
          },
          "response": []
        },
